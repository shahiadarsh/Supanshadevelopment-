{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.ts",
        "use": "@vercel/vite",
        "config": {
           "outputDirectory": "dist/public"
        }
      },
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/index.ts" 
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }